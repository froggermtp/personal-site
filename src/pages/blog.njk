---
permalink: /blog/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber }}/{% endif %}
title: Blog
pagination:
    data: collections.post
    size: 6
    reverse: true
    alias: posts
---

{% extends "main.njk" %}
{% import "blog-macros.njk" as blogMacros %}

{% block head %}
  {{ super() }}

  {% set css %}
      {% include "blog.css" %}
  {% endset %}

  <style>
      {{ css | cssmin | safe }}
  </style>

{% endblock %}

{% block content %}

<header id="blog-page-header">
  <h1>Blog</h1>
</header>

<div id="posts">
{% for post in posts %}
  {{ blogMacros.article(post) }}
{% endfor %}
</div>

<nav id="pagination">
    {% if pagination.previousPageHref %}
      <a href="{{ pagination.previousPageHref }}" class="new">Newer posts</a>
    {% endif %}
    {% if pagination.nextPageHref %}
      <a href="{{ pagination.nextPageHref }}" class="old">Older posts</a>
    {% endif %}
</nav>

{% endblock %}