{% macro article(post) %}

<article>
        <a href="{{ post.url | url }}"> 
            <img src="{{ post.data.mainImage }}"></img>
        </a>
        <h1 class="blogTitle">
            <a href="{{ post.url | url }}">{{ post.data.title }}</a>
        </h1>
        <div class="metadata">
            <time>{{ post.date.toLocaleDateString("en-US", { year: 'numeric', month: 'long', day: 'numeric' }) | safe}}</time>
        </div>
</article>

{% endmacro %}