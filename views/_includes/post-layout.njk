{% extends "main-layout.njk" %}

{% block head %}
{{ super() }}
<link rel="stylesheet" href="/css/post.css" />
<script src="/js/post.js" />
{% endblock %}

{% block content %}
    <article>
        <header>
            <div id="mainImage">
                <img src="{{ mainImage | safe }}"></img>
            </div>
            <h1 id="title">{{ title | safe }}</h1>
            <div id="headerDiv">
                <div id="postInfo">
                    <span>{{ blogAuthor | safe }}</span>
                    <time> {{ page.date.toLocaleDateString("en-US", { year: 'numeric', month: 'long', day: 'numeric' }) | safe }} </span>
                </div>
                <div id="shareButtons">
                </div>
            </div>
        </header>
        <div class="articleContent">
            {{ content | safe }}
        </div>
    </article>
    <nav id="otherPosts">
    {% if collections.postInfo[page.url].nextTitle %}
        <div id="next">
            <span>Next post</span>
            <a href="{{ collections.postInfo[page.url].nextUrl }}">{{ collections.postInfo[page.url].nextTitle }}</a>
        </div>
    {% endif %}
    {% if collections.postInfo[page.url].previousTitle %}
        <div id="previous">
            <span>Previous post</span>
            <a href="{{ collections.postInfo[page.url].previousUrl }}">{{ collections.postInfo[page.url].previousTitle }}</a>
        </div>
    {% endif %}
    </nav>
{% endblock %}