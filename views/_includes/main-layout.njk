<!doctype html>

<html lang="en">

<head>
    {% block head %}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{{ title }} | Matthew Parris</title>
    <meta name="description" content="{{ description }}">
    <meta name="author" content="Matthew Parris">

    {% set css %}
        {% include "css/normalize.css" %}
        {% include "css/main.css" %}
    {% endset %}

    <style>
        {{ css | cssmin | safe }}
    </style>

    <link href="https://fonts.googleapis.com/css?family=Oxygen|Source+Sans+Pro&display=swap" rel="stylesheet"> 
    {% endblock %}
</head>

<body>
    <div id="main-container">
        {% include "parts/_nav.njk" %}
        {% block content %}

        {% endblock %}
    </div>
    {% include "parts/_footer.njk" %}
</body>

</html>